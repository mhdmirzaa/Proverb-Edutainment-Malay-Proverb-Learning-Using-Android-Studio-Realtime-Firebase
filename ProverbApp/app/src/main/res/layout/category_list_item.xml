<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/category_item_bg"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icon/Image -->
    <ImageView
        android:id="@+id/courseIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/course"
        android:contentDescription="Course Icon"
        android:layout_marginEnd="16dp" />

    <!-- Text Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Course Title -->
        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Training Courses"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Course Details -->
        <TextView
            android:id="@+id/courseDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,463 students Â· 10 left"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>
</LinearLayout>
